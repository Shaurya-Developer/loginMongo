<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
  </head>
  <body>
    <% if (user) { %>
    <h1>Welcome <%= user.name %></h1>
    <% if (user.userImage) { %>
    <img src="<%= filename %>" width="200" height="200" />
    <% } else { %>
    <p>No user image available</p>
    <% } %>
    <a href="/upload">Update User Image</a>
    <% } else { %>
    <h1>Please login or signup</h1>
    <p><a href="/">Login</a></p>
    <p><a href="/signup">Signup</a></p>
    <% } %>
  </body>
</html>
